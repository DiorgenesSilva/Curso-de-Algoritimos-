 Escreval(" EXEMPLO 003 ")

 Algoritmo "TABUADA REPITA ATE   "
   

Var
   CONT,NUM,RES: inteiro

Inicio
 
 CONT <- 1
 Escreval("QUER SABER A TABUADA DE QUAL NUMERO?")
 Leia(NUM)
 Repita
 RES <- ( NUM * CONT)
 Escreval(NUM,"X",CONT,"=",RES)
 CONT <- CONT +1
 ate(CONT > 10)
 
 

Fimalgoritmo


 Escreval(" EXEMPLO 004 ")

Algoritmo "estrutura de condiçao REPITA ATE, QUANTOS NUMEROS SAO NEGATIVOS"

Var
  NUM,CONT,TOTALN : inteiro

Inicio
    CONT <- 1
    TOTALN <- 0
    Repita
       Escreva("Digite um numero")
       Leia(NUM)
       Se (NUM < 0) Entao
          TOTALN <- TOTALN + 1
       Fimse
       CONT <- CONT + 1
    Ate(CONT > 5 )
   Escreval("Foramm  digitados ",TOTALN,"Valores negativos")

Fimalgoritmo

Escreval(" EXEMPLO 005 ")

Algoritmo "REPITA ATE CALCULAR CALCULAR O FACTORIAL "

Var

CONTADOR,NUMERO,FATORIAL: inteiro

Inicio
   Escreval("==========================================================" )
   Escreval("  ************ CALCULE O FACTORIAL **************  " )
   Escreval("==========================================================" )

   Escreva(" Digite um numero : ")
   leia(NUMERO)
   CONTADOR <- NUMERO
   FATORIAL <- 1
   REPITA
      Escreval(CONTADOR,"X")
      FATORIAL <- FATORIAL * CONTADOR
      CONTADOR <- CONTADOR - 1
    Ate (CONTADOR < 1 )
   Escreval(" O valor o FACTORIAL de : " , NUMERO , " É IGUAL A : " ,FATORIAL , " FINALIZADO !" )
   
Fimalgoritmo

